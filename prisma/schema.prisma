// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Terms {
  id             BigInt     @id @default(autoincrement())
  privacyAgree   Boolean    @map("privacy_agree")
  locationAgree  Boolean    @map("location_agree")
  marketingAgree Boolean    @map("marketing_agree")
  termsAgree     Boolean    @map("terms_agree")
  createdAt      DateTime   @default(now()) @map("created_at")
  updatedAt      DateTime   @updatedAt @map("updated_at")

  Agree          Agree[]
  
  @@map("terms")
}

model User {
  id          BigInt         @id @default(autoincrement())
  name        String         @db.VarChar(20)
  nickname    String         @db.VarChar(20)
  password    String         @db.VarChar(100)
  gender      Gender
  birth       DateTime?      @db.Date
  address     String?        @db.VarChar(100)
  email       String         @unique @db.VarChar(100)
  phoneNum    String?        @map("phone_num") @db.Char(11)
  isActive    Boolean        @map("is_active") @default(true)
  point       Int            @default(0)
  createdAt   DateTime       @map("created_at") @default(now())
  updatedAt   DateTime       @map("updated_at") @updatedAt

  Agree        Agree[]
  PreferFood   PreferFood[]
  MyMission    MyMission[]
  Review       Review[]

  @@map("user")
}

model Agree {
  id        BigInt   @id @default(autoincrement())
  userId    BigInt   @map("user_id")
  termsId   BigInt   @map("terms_id")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  User  User  @relation(fields: [userId], references: [id])
  Terms Terms @relation(fields: [termsId], references: [id])
  
  @@map("agree")
}

model FoodCategory {
  id        BigInt       @id @default(autoincrement())
  name      String       @db.VarChar(20)
  createdAt DateTime     @default(now()) @map("created_at")
  updatedAt DateTime     @updatedAt @map("updated_at")

  PreferFood PreferFood[]
  
  @@map("food_category")
}

model PreferFood {
  id             BigInt       @id @default(autoincrement())
  userId         BigInt       @map("user_id")
  foodCategoryId BigInt       @map("food_category_id")
  createdAt      DateTime     @default(now()) @map("created_at")
  updatedAt      DateTime     @updatedAt @map("updated_at")

  User         User         @relation(fields: [userId], references: [id])
  FoodCategory FoodCategory @relation(fields: [foodCategoryId], references: [id])
  
  @@map("prefer_food")
}

model Region {
  id        BigInt     @id @default(autoincrement())
  name      String     @db.VarChar(20)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  Store     Store[]
  Mission   Mission[]
  MyMission MyMission[]
  
  @@map("region")
}

model StoreCategory {
  id        BigInt     @id @default(autoincrement())
  name      String     @db.VarChar(20)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  Store     Store[]
  @@map("store_category")
}

model Store {
  id              BigInt        @id @default(autoincrement())
  regionId        BigInt        @map("region_id")
  storeCategoryId BigInt        @map("store_category_id")
  name            String        @db.VarChar(20)
  address         String        @db.VarChar(100)
  isOpen          Boolean       @map("is_open") @default(true)
  score           Float         @default(0)
  createdAt       DateTime      @default(now()) @map("created_at")
  updatedAt       DateTime      @updatedAt @map("updated_at")

  Region         Region         @relation(fields: [regionId], references: [id])
  StoreCategory  StoreCategory  @relation(fields: [storeCategoryId], references: [id])
  Mission        Mission[]
  MyMission      MyMission[]
  Review         Review[]
  
  @@map("store")
}

model Mission {
  id            BigInt     @id @default(autoincrement())
  storeId       BigInt     @map("store_id")
  regionId      BigInt     @map("region_id")
  reward        Int
  dDay          DateTime?  @map("d_day")
  missionDetail String?    @map("mission_detail") @db.VarChar(100)
  createdAt     DateTime   @default(now()) @map("created_at")
  updatedAt     DateTime   @updatedAt @map("updated_at")

  Store      Store      @relation(fields: [storeId], references: [id])
  Region     Region     @relation(fields: [regionId], references: [id])
  MyMission  MyMission[]
  
  @@map("mission")
}

model MyMission {
  id            BigInt        @id @default(autoincrement())
  userId        BigInt        @map("user_id")
  missionId     BigInt        @map("mission_id")
  storeId       BigInt        @map("store_id")
  regionId      BigInt        @map("region_id")
  status        MissionStatus
  missionCount  Int           @map("mission_count") @default(0)
  missionDetail String?       @map("mission_detail") @db.VarChar(200)
  createdAt     DateTime      @default(now()) @map("created_at")
  updatedAt     DateTime      @updatedAt @map("updated_at")
  startedAt     DateTime?     @map("started_at")
  completedAt   DateTime?     @map("completed_at")

  User     User     @relation(fields: [userId], references: [id])
  Mission  Mission  @relation(fields: [missionId], references: [id])
  Store    Store    @relation(fields: [storeId], references: [id])
  Region   Region   @relation(fields: [regionId], references: [id])

  @@map("my_mission")
}

model Review {
  id        BigInt     @id @default(autoincrement())
  storeId   BigInt     @map("store_id")
  userId    BigInt     @map("user_id")
  score     Float
  contents  String?    @db.VarChar(200)
  createdAt DateTime   @default(now()) @map("created_at")
  updatedAt DateTime   @updatedAt @map("updated_at")

  Store        Store        @relation(fields: [storeId], references: [id])
  User         User         @relation(fields: [userId], references: [id])
  ReviewImages ReviewImages[]
  
  @@map("review")
}

model ReviewImages {
  id        BigInt    @id @default(autoincrement())
  reviewId  BigInt    @map("review_id")
  imageUrl  String    @map("image_url") @db.VarChar(300)
  createdAt DateTime  @default(now()) @map("created_at")
  updatedAt DateTime  @updatedAt @map("updated_at")

  Review Review @relation(fields: [reviewId], references: [id])
  
  @@map("review_images")
}

enum Gender {
  MALE
  FEMALE
  OTHER
}

enum MissionStatus {
  PENDING
  IN_PROGRESS
  SUCCESS
  FAILED
  CANCELLED
}